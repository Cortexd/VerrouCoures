<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_ssid"
        android:inputType="none"
        android:key="SSID_Maison"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="SSID Réseaux Wifi Maison" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="192.168.1.3"
        android:inputType="none"
        android:key="IP_Locale_Banane"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Ip local Banane" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="18099"
        android:inputType="none"
        android:key="Port_Banane"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Port Banane" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="xxxxx"
        android:inputType="none"
        android:key="accessTokenDropBox"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Access Token DropBox" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="xxxxx"
        android:inputType="none"
        android:key="keyWebService"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Cle web service Banane" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="onlyHouseMode"
        android:title="Uniquement à la maison" />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />

</PreferenceScreen>
